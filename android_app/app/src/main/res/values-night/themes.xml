<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AccountingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/primary_light</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.AccountingApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AccountingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AccountingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources> 