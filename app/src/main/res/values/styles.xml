<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- الأنماط الأساسية -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <!-- أنماط النصوص -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_size_headline1</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_size_headline2</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/text_size_headline3</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body1</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body2</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- أنماط الأزرار -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="cornerRadius">@dimen/corner_radius_12dp</item>
        <item name="elevation">@dimen/elevation_medium</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_12</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_18</item>
        <item name="android:autoSizeStepGranularity">@dimen/text_size_step</item>
    </style>

    <style name="ButtonStyle" parent="Widget.App.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <!-- أنماط البطاقات -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <!-- أنماط حقول الإدخال -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/hint_gray</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_12dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.App.TextInputLayout">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/hint_gray</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">#000000</item>
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_2sdp</item>
        <item name="hintTextColor">@color/hint_gray</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textColor">#000000</item>
        <item name="helperTextTextColor">@color/hint_gray</item>
        <item name="counterTextColor">@color/hint_gray</item>
        <item name="errorTextColor">#F44336</item>
    </style>

    <style name="SearchTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">#FFFFFF</item>
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="hintTextColor">@color/hint_gray</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="boxStrokeColor">#1976D2</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="BottomSheetDialogTheme.FullScreen" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle.FullScreen</item>
    </style>

    <style name="BottomSheetStyle.FullScreen" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="DialogAnimation_SlideUp">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources> 