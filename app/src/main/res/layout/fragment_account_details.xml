<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_background">

            <!-- رأس منحني علوي -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xl"
                android:background="@color/primary"
                android:scaleX="2.2"
                android:scaleY="1.2"
                android:layout_marginTop="@dimen/spacing_none" />

            <!-- أيقونة دائرية -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/icon_size_xl"
                android:layout_height="@dimen/icon_size_xl"
                app:cardCornerRadius="@dimen/card_corner_radius_xl"
                app:cardElevation="@dimen/card_elevation_xl"
                app:cardBackgroundColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/minus_100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerInside"
                    android:tint="@color/primary_variant" />
            </androidx.cardview.widget.CardView>

            <!-- العنوان -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تفاصيل الحساب"
                android:textSize="@dimen/text_size_headline1"
                android:textStyle="bold"
                android:textColor="@color/primary_variant"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- بطاقة معلومات الحساب -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accountInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_small"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:id="@+id/accountName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_variant"
                        android:textSize="@dimen/text_size_headline1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/accountBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xs"
                        android:textSize="@dimen/text_size_body1"
                        android:textStyle="bold"
                        android:textColor="@color/credit_green" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_small">
                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@drawable/ic_phone"
                            android:tint="@color/hint_gray"
                            android:layout_marginEnd="@dimen/margin_xs" />
                        <TextView
                            android:id="@+id/accountPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hint_gray"
                            android:textSize="@dimen/text_size_body2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_small">
                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:src="@drawable/ic_note"
                            android:tint="@color/hint_gray"
                            android:layout_marginEnd="@dimen/margin_xs" />
                        <TextView
                            android:id="@+id/accountNotes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hint_gray"
                            android:textSize="@dimen/text_size_body2" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- زر اختيار الفترة الزمنية -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dateRangeButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="الفترة الزمنية"
                app:icon="@drawable/ic_calendar"
                app:iconGravity="textStart"
                app:backgroundTint="@color/background_light"
                android:textColor="@color/primary_variant"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body2" />

            <!-- بطاقة الإحصائيات -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statisticsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="الإحصائيات"
                        android:textColor="@color/primary_variant"
                        android:textSize="@dimen/text_size_body2"
                        android:textStyle="bold" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icon_size_xl"
                        android:layout_marginTop="@dimen/margin_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- أزرار الإجراءات -->
            <LinearLayout
                android:id="@+id/actionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_xl"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editAccountButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_weight="1"
                    android:text="تعديل الحساب"
                    app:icon="@drawable/ic_edit"
                    app:backgroundTint="@color/primary_variant"
                    android:textColor="@color/on_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewAccountStatementButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="كشف الحساب"
                    app:icon="@drawable/ic_statement"
                    app:backgroundTint="@color/background_light"
                    android:textColor="@color/primary_text" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout> 