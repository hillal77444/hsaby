<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_large"
    android:fitsSystemWindows="true">

    <!-- الشريط العلوي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_small"
        android:orientation="horizontal"
        android:background="#3f51b5"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_xs"
        android:paddingEnd="@dimen/padding_xs"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="@dimen/icon_size_sm"
            android:layout_height="@dimen/icon_size_sm"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu"
            android:tint="#fff"
            android:contentDescription="Menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="الصندوق"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_body1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_headline2"
            android:autoSizeStepGranularity="@dimen/text_size_step"
            android:gravity="end"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- البطاقة العلوية المصغرة -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_small"
        app:cardElevation="@dimen/elevation_small"
        android:layout_margin="@dimen/margin_small"
        app:cardBackgroundColor="#FFFFFF"
        android:minHeight="@dimen/min_height_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_xs">

            <!-- اختيار الصندوق وزر الطباعة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <AutoCompleteTextView
                    android:id="@+id/cashboxDropdown"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_size_sm"
                    android:layout_weight="1"
                    android:hint="اختر الصندوق"
                    android:background="@drawable/bg_edittext"
                    android:padding="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:textSize="@dimen/text_size_body2"
                    android:autoSizeTextType="none"
                    android:inputType="none"
                    android:focusable="false"
                    android:gravity="center"
                    android:textAlignment="center"
                    style="@style/CustomTextInputEditText"
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="اختبار الصندوق"/>

                <ImageButton
                    android:id="@+id/btnPrintInCard"
                    android:layout_width="@dimen/icon_size_sm"
                    android:layout_height="@dimen/icon_size_sm"
                    android:background="@drawable/bg_print_button"
                    android:src="@drawable/ic_print"
                    android:tint="#1976d2"
                    android:contentDescription="طباعة"
                    android:layout_marginStart="@dimen/margin_xs"/>
            </LinearLayout>

            <!-- التواريخ بشكل أفقي ومضغوط -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:layout_marginTop="@dimen/margin_xs">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:text="من"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_caption"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_min"
                    android:autoSizeMaxTextSize="@dimen/text_size_body1"
                    android:autoSizeStepGranularity="@dimen/text_size_step"
                    android:textColor="#666666"
                    android:paddingHorizontal="@dimen/padding_xs"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startDateInput"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_size_sm"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_calendar"
                    android:textSize="@dimen/text_size_body2"
                    android:autoSizeTextType="none"
                    style="@style/CustomTextInputEditText"
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:padding="0dp"
                    android:text="2024-06-01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:text="الى"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_caption"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_min"
                    android:autoSizeMaxTextSize="@dimen/text_size_body1"
                    android:autoSizeStepGranularity="@dimen/text_size_step"
                    android:textColor="#666666"
                    android:paddingHorizontal="@dimen/padding_xs"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endDateInput"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_size_sm"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_calendar"
                    android:textSize="@dimen/text_size_body2"
                    android:autoSizeTextType="none"
                    style="@style/CustomTextInputEditText"
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:padding="0dp"
                    android:text="2024-06-30"/>
            </LinearLayout>

            <!-- أزرار العملات -->
            <LinearLayout
                android:id="@+id/currencyButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- مكان التقرير -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:layout_margin="@dimen/margin_xs"/>
</LinearLayout> 