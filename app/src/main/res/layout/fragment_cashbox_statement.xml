<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="@dimen/spacing_standard">

        <!-- رأس منحني علوي -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xl"
            android:background="@color/primary"
            android:scaleX="2.2"
            android:scaleY="1.2"
            android:layout_marginTop="@dimen/spacing_none" />

        <!-- أيقونة دائرية -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            app:cardCornerRadius="@dimen/card_corner_radius_xl"
            app:cardElevation="@dimen/card_elevation_xl"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/minus_100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_wallet"
                android:scaleType="centerInside"
                android:tint="@color/primary_variant" />
        </androidx.cardview.widget.CardView>

        <!-- العنوان -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كشف الصندوق"
            android:textSize="@dimen/text_size_headline1"
            android:textStyle="bold"
            android:textColor="@color/primary_variant"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <!-- البطاقة العلوية لاختيار الصندوق والتواريخ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <!-- اختيار الصندوق وزر الطباعة -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <AutoCompleteTextView
                        android:id="@+id/cashboxDropdown"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_size_sm"
                        android:layout_weight="1"
                        android:hint="اختر الصندوق"
                        android:background="@drawable/bg_edittext"
                        android:padding="0dp"
                        android:textSize="@dimen/text_size_body2"
                        android:autoSizeTextType="none"
                        android:inputType="none"
                        android:focusable="false"
                        android:gravity="center"
                        android:textAlignment="center"
                        style="@style/CustomTextInputEditText"
                        android:textColor="@color/on_background"
                        android:textColorHint="@color/hint_gray"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <ImageButton
                        android:id="@+id/btnPrintInCard"
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:background="@drawable/bg_print_button"
                        android:src="@drawable/ic_print"
                        android:tint="@color/primary_variant"
                        android:contentDescription="طباعة"
                        android:layout_marginStart="@dimen/margin_xs"/>
                </LinearLayout>

                <!-- التواريخ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end"
                    android:layout_marginTop="@dimen/margin_xs">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_medium"
                        android:text="من"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_caption"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_min"
                        android:autoSizeMaxTextSize="@dimen/text_size_body1"
                        android:autoSizeStepGranularity="@dimen/text_size_step"
                        android:textColor="@color/hint_gray"
                        android:paddingHorizontal="@dimen/padding_xs"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/startDateInput"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_size_sm"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:focusable="false"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_calendar"
                        android:textSize="@dimen/text_size_body2"
                        android:autoSizeTextType="none"
                        style="@style/CustomTextInputEditText"
                        android:textColor="@color/on_background"
                        android:textColorHint="@color/hint_gray"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:padding="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_medium"
                        android:text="الى"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_caption"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_min"
                        android:autoSizeMaxTextSize="@dimen/text_size_body1"
                        android:autoSizeStepGranularity="@dimen/text_size_step"
                        android:textColor="@color/hint_gray"
                        android:paddingHorizontal="@dimen/padding_xs"/>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/endDateInput"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_size_sm"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:focusable="false"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_calendar"
                        android:textSize="@dimen/text_size_body2"
                        android:autoSizeTextType="none"
                        style="@style/CustomTextInputEditText"
                        android:textColor="@color/on_background"
                        android:textColorHint="@color/hint_gray"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:padding="0dp"/>
                </LinearLayout>

                <!-- أزرار العملات (مخفي) -->
                <LinearLayout
                    android:id="@+id/currencyButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_xs"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- مكان التقرير -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_margin="@dimen/margin_xs"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 