<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/padding_xxl"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_background">

            <!-- رأس منحني علوي -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xl"
                android:background="@color/primary"
                android:scaleX="2.2"
                android:scaleY="1.2"
                android:layout_marginTop="@dimen/spacing_none" />

            <!-- أيقونة دائرية -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/icon_size_xl"
                android:layout_height="@dimen/icon_size_xl"
                app:cardCornerRadius="@dimen/card_corner_radius_xl"
                app:cardElevation="@dimen/card_elevation_xl"
                app:cardBackgroundColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/minus_100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_edit"
                    android:scaleType="centerInside"
                    android:tint="@color/primary_variant" />
            </androidx.cardview.widget.CardView>

            <!-- العنوان -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تعديل القيد المحاسبي"
                android:textSize="@dimen/text_size_headline1"
                android:textStyle="bold"
                android:textColor="@color/primary_variant"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قم بتعديل تفاصيل القيد المحاسبي"
                android:textSize="@dimen/text_size_body2"
                android:textColor="@color/textSecondary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xs"
                android:layout_marginBottom="@dimen/margin_large" />

            <!-- بطاقة الحساب: اختيار الحساب + اختيار الصندوق في صف واحد -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding">

                    <!-- اختيار الحساب -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/accountLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="اختر الحساب"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="@color/primary"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2">

                        <AutoCompleteTextView
                            android:id="@+id/accountAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:background="@null"
                            android:padding="@dimen/padding_medium"
                            android:textSize="@dimen/text_size_body1"
                            android:textColor="#000000"
                            android:textColorHint="#666666"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- اختيار الصندوق -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cashboxLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="اختر الصندوق"
                        app:startIconDrawable="@android:drawable/ic_menu_save"
                        app:startIconTint="@color/primary"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2">

                        <AutoCompleteTextView
                            android:id="@+id/cashboxAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:background="@null"
                            android:padding="@dimen/padding_medium"
                            android:textSize="@dimen/text_size_body1"
                            android:textColor="#000000"
                            android:textColorHint="#666666"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة المبلغ والتاريخ -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="@dimen/padding_small">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/amountLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/padding_small"
                        android:hint="المبلغ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/amountEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:drawableStart="@drawable/ic_money"
                            android:drawablePadding="@dimen/padding_xs"
                            android:textColor="#000000"
                            android:textColorHint="#666666"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dateLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_xs"
                        android:hint="التاريخ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="@dimen/padding_xs"
                            android:textColor="#000000"
                            android:textColorHint="#666666" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة نوع العملية (مخفاة فقط) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="@android:color/white"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نوع العملية"
                        android:textSize="@dimen/text_size_body1"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="@dimen/margin_xs" />

                    <RadioGroup
                        android:id="@+id/typeRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioDebit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عليه"
                            android:textColor="#1976D2" />

                        <RadioButton
                            android:id="@+id/radioCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="له"
                            android:textColor="#1976D2" />

                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة العملة (مخفاة فقط) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="@android:color/white"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="العملة"
                        android:textSize="@dimen/text_size_body1"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="@dimen/margin_xs" />

                    <RadioGroup
                        android:id="@+id/currencyRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioYer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="يمني"
                            android:textColor="#1976D2" />

                        <RadioButton
                            android:id="@+id/radioSar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="سعودي"
                            android:textColor="#1976D2" />

                        <RadioButton
                            android:id="@+id/radioUsd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:text="دولار"
                            android:textColor="#1976D2" />

                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة الوصف -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/descriptionLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="الوصف">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/descriptionEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:textColor="#000000"
                            android:textColorHint="#666666"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- بطاقة الملاحظات (مخفاة فقط) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="@android:color/white"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/notesLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="الملاحظات">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/notesEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            style="@style/CustomTextInputEditText" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- الأزرار -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_xl">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="حفظ"
                    android:icon="@android:drawable/ic_menu_save"
                    android:backgroundTint="@color/primary_variant"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/margin_small"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="إلغاء"
                    android:icon="@android:drawable/ic_menu_close_clear_cancel"
                    android:backgroundTint="@color/cardBackground"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout> 