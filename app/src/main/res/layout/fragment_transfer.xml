<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- بطاقة اختيار الحسابين والصندوق -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_spacing"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <!-- الحساب المحول منه -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="من الحساب"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_caption"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fromAccountLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="اختر الحساب المحول منه"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="@color/primary"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fromAccountAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:hint="من"
                            android:drawableEnd="@drawable/ic_arrow_downward"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/fromAccountBalanceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="الرصيد: -"
                            android:textColor="@color/secondary_variant"
                            android:textSize="@dimen/text_size_body2"
                            android:paddingStart="@dimen/spacing_sm"
                            android:paddingBottom="@dimen/spacing_xs"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- الحساب المحول إليه -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إلى الحساب"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_caption"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/toAccountLayout"
                        style="@style/CustomTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="اختر الحساب المحول إليه"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="@color/primary"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/toAccountAutoComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:hint="الى"
                            android:drawableEnd="@drawable/ic_arrow_downward"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/toAccountBalanceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="الرصيد: -"
                            android:textColor="@color/secondary_variant"
                            android:textSize="@dimen/text_size_body2"
                            android:paddingStart="@dimen/spacing_sm"
                            android:paddingBottom="@dimen/spacing_xs"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- اختيار الصندوق -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اختر الصندوق"
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_size_caption"/>

                    <Spinner
                        android:id="@+id/cashboxSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة اختيار العملة -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_spacing"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اختر العملة"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_size_caption"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="العملة"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/textSecondary"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primary">

                    <Spinner
                        android:id="@+id/currencySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة المبلغ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_spacing"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="المبلغ"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">

                    <EditText
                        android:id="@+id/amountEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة الملاحظات -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:layout_marginBottom="@dimen/card_spacing"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ملاحظات (اختياري)"
                    app:startIconDrawable="@drawable/ic_notes"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">

                    <EditText
                        android:id="@+id/notesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- زر تنفيذ التحويل -->
        <Button
            android:id="@+id/transferButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تنفيذ التحويل"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>
</ScrollView> 