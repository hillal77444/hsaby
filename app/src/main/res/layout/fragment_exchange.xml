<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- بطاقة اختيار الحساب والصندوق بشكل مطابق لإضافة معاملة -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- اختيار الحساب -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/accountLayout"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="اختر الحساب"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/selectedAccountNameText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="لم يتم اختيار حساب بعد"
                            android:textColor="#1976D2"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="8dp"/>
                        <Button
                            android:id="@+id/selectAccountButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اختيار"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/accountBalanceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="الرصيد: -"
                        android:textColor="#388E3C"
                        android:textSize="14sp"
                        android:paddingStart="8dp"
                        android:paddingBottom="4dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- اختيار الصندوق -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cashboxLayout"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="اختر الصندوق"
                    app:startIconDrawable="@android:drawable/ic_menu_save"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">

                    <Spinner
                        android:id="@+id/cashboxSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة اختيار العملات من/إلى -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="العملة من"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">
                    <Spinner
                        android:id="@+id/fromCurrencySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="العملة إلى"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2"
                    android:layout_marginStart="8dp">
                    <Spinner
                        android:id="@+id/toCurrencySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة المبلغ وسعر الصرف -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="المبلغ"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">
                    <EditText
                        android:id="@+id/amountEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="سعر الصرف"
                    app:startIconDrawable="@drawable/ic_sync_alt"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2"
                    android:layout_marginStart="8dp">
                    <EditText
                        android:id="@+id/rateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة نوع العملية -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نوع العملية"
                    app:startIconDrawable="@drawable/ic_sync_alt"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">
                    <Spinner
                        android:id="@+id/operationTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة الملاحظات -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ملاحظات (اختياري)"
                    app:startIconDrawable="@drawable/ic_notes"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="#666666"
                    app:boxStrokeColor="#1976D2">
                    <EditText
                        android:id="@+id/notesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- عرض المبلغ بعد الصرف -->
        <TextView android:id="@+id/exchangeAmountText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="المبلغ بعد الصرف: -" android:textColor="#512DA8" android:textStyle="bold" android:layout_marginBottom="16dp"/>

        <!-- زر تنفيذ الصرف -->
        <Button android:id="@+id/exchangeButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="تنفيذ الصرف"/>
    </LinearLayout>
</ScrollView> 