<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <!-- الدائرة العلوية والشعار والعنوان -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_xl"
                android:background="@color/info"
                android:scaleX="2.2"
                android:scaleY="1.2" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_large"
                android:layout_height="@dimen/height_large"
                app:cardCornerRadius="@dimen/corner_radius_xl"
                app:cardElevation="@dimen/elevation_large"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/minus_120dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_accounts"
                    android:scaleType="centerInside"
                    android:tint="#152FD9" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إدارة الحسابات"
                android:textSize="@dimen/text_size_headline1"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عرض وإدارة جميع الحسابات"
                android:textSize="@dimen/text_size_body2"
                android:textColor="#666666"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xs"
                android:layout_marginBottom="@dimen/margin_large"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- شريط البحث والتصفية -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- شريط البحث -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="البحث في الحسابات..."
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="#152FD9"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
                        app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
                        app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
                        app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium"
                        android:layout_marginBottom="@dimen/margin_small"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#222222"
                        android:background="#FFFFFF"
                        style="@style/SearchTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/search_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="#000000"
                            android:textColorHint="#666666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- خيارات التصفية -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/filterButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_medium"
                            android:layout_weight="1"
                            android:text="تصفية"
                            android:textSize="@dimen/text_size_small"
                            android:icon="@drawable/ic_filter"
                            app:iconSize="@dimen/icon_size_sm"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/padding_xs"
                            android:backgroundTint="#F3F4F6"
                            android:textColor="#152FD9"
                            app:cornerRadius="@dimen/corner_radius_small"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/sortButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_medium"
                            android:layout_weight="1"
                            android:text="ترتيب (الرصيد)"
                            android:textSize="@dimen/text_size_small"
                            android:icon="@drawable/ic_sort"
                            app:iconSize="@dimen/icon_size_sm"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/padding_xs"
                            android:backgroundTint="#F3F4F6"
                            android:textColor="#152FD9"
                            app:cornerRadius="@dimen/corner_radius_small"
                            android:layout_marginStart="@dimen/margin_small"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- إحصائيات سريعة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_large">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_large"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/corner_radius_medium"
                    app:cardElevation="@dimen/elevation_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_xs"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/totalAccountsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:textSize="@dimen/text_size_body1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إجمالي الحسابات"
                            android:textColor="#666666"
                            android:textSize="@dimen/text_size_caption"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_large"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/corner_radius_medium"
                    app:cardElevation="@dimen/elevation_small"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/activeAccountsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:textSize="@dimen/text_size_body1"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الحسابات النشطة"
                            android:textColor="#666666"
                            android:textSize="@dimen/text_size_caption"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_xs"
                            android:autoSizeMaxTextSize="@dimen/text_size_xl"
                            android:autoSizeStepGranularity="@dimen/text_size_caption" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- قائمة الحسابات -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/accounts_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/padding_small"
                android:nestedScrollingEnabled="false" />

            <!-- مساحة للزر العائم -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_xxl" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- الزر العائم -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_xxxl"
        android:contentDescription="@string/add_account"
        app:srcCompat="@drawable/ic_add"
        app:backgroundTint="#152FD9"
        app:tint="#FFFFFF" />

</FrameLayout> 