<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_standard">

        <!-- الشعار الدائري -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_xl">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_gallery"
                android:scaleType="centerInside"
                app:tint="#152FD9" />
        </androidx.cardview.widget.CardView>

        <!-- العنوان مع أيقونة -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large">
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_gallery"
                app:tint="#152FD9"
                android:layout_marginEnd="@dimen/margin_small" />
            <TextView
                android:id="@+id/text_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="#152FD9"
                android:textSize="@dimen/text_size_headline1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
        </LinearLayout>

        <!-- محتوى المعرض (يمكن إضافة RecyclerView أو GridView هنا لاحقاً) -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 