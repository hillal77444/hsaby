<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:layout_marginVertical="@dimen/margin_small"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_medium"
    app:strokeWidth="@dimen/zero"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="#E3E8FD"
    app:cardBackgroundColor="#FFFFFF"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:stateListAnimator="@animator/card_state_list_anim"
    android:tag="transaction_card">

    <LinearLayout
        android:id="@+id/innerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_inner_background_default">

        <!-- صف العنوان والمبلغ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium">

            <!-- معلومات الحساب -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/accountNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_headline3"
                        android:textStyle="bold"
                        android:textColor="#152FD9"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        tools:text="اسم الحساب"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_xs"
                        android:autoSizeMaxTextSize="@dimen/text_size_xl"
                        android:autoSizeStepGranularity="@dimen/text_size_caption" />

                    <ImageView
                        android:id="@+id/transactionTypeIcon"
                        android:layout_width="@dimen/icon_size_sm"
                        android:layout_height="@dimen/icon_size_sm"
                        android:layout_marginStart="@dimen/margin_small"
                        android:src="@drawable/ic_debit"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/transactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xs"
                    android:textSize="@dimen/text_size_body2"
                    android:textColor="#666"
                    android:fontFamily="sans-serif"
                    tools:text="2024/03/20"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_xs"
                    android:autoSizeMaxTextSize="@dimen/text_size_xl"
                    android:autoSizeStepGranularity="@dimen/text_size_caption" />

            </LinearLayout>

            <!-- المبلغ -->
            <TextView
                android:id="@+id/transactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_headline3"
                android:textStyle="bold"
                android:textColor="@drawable/transaction_amount_text_color"
                android:fontFamily="sans-serif-medium"
                tools:text="1,000,000 ريال"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_xl"
                android:autoSizeStepGranularity="@dimen/text_size_caption" />

        </LinearLayout>

        <!-- خط فاصل -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xs"
            android:background="#E3E8FD"
            android:layout_marginHorizontal="@dimen/margin_medium" />

        <!-- صف الوصف -->
        <TextView
            android:id="@+id/transactionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            android:textSize="@dimen/text_size_body2"
            android:textColor="#666"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            tools:text="وصف القيد المحاسبي"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_xs"
            android:autoSizeMaxTextSize="@dimen/text_size_xl"
            android:autoSizeStepGranularity="@dimen/text_size_caption" />

        <!-- صف الأزرار -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:gravity="center">

            <!-- زر واتساب -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/whatsappButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_small"
                android:minWidth="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_whatsapp"
                app:iconSize="@dimen/icon_size_sm"
                app:iconGravity="textStart"
                app:iconTint="#25D366"
                app:strokeColor="#25D366"
                app:strokeWidth="@dimen/spacing_xs"
                app:cornerRadius="@dimen/corner_radius_large"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="إرسال عبر واتساب"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_xl"
                android:autoSizeStepGranularity="@dimen/text_size_caption" />

            <!-- زر SMS جديد -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/smsButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_small"
                android:minWidth="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_sms"
                app:iconSize="@dimen/icon_size_sm"
                app:iconGravity="textStart"
                app:iconTint="#2196F3"
                app:strokeColor="#2196F3"
                app:strokeWidth="@dimen/spacing_xs"
                app:cornerRadius="@dimen/corner_radius_large"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="إرسال رسالة نصية"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_xl"
                android:autoSizeStepGranularity="@dimen/text_size_caption" />

            <!-- زر تعديل -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/editButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_small"
                android:minWidth="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_edit"
                app:iconSize="@dimen/icon_size_sm"
                app:iconGravity="textStart"
                app:iconTint="#2196F3"
                app:strokeColor="#2196F3"
                app:strokeWidth="@dimen/spacing_xs"
                app:cornerRadius="@dimen/corner_radius_large"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="تعديل"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_xl"
                android:autoSizeStepGranularity="@dimen/text_size_caption" />

            <!-- زر حذف -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:gravity="center"
                app:icon="@drawable/ic_delete"
                app:iconSize="@dimen/icon_size_sm"
                app:iconGravity="textStart"
                app:iconTint="#F44336"
                app:strokeColor="#F44336"
                app:strokeWidth="@dimen/spacing_xs"
                app:cornerRadius="@dimen/corner_radius_large"
                android:backgroundTint="#FFFFFF"
                android:contentDescription="حذف"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_xl"
                android:autoSizeStepGranularity="@dimen/text_size_caption" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
