<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginVertical="@dimen/margin_xs"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_small"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical">

        <!-- أيقونة الحساب -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            app:cardCornerRadius="@dimen/corner_radius_xl"
            app:cardElevation="@dimen/elevation_small"
            app:cardBackgroundColor="#E3F2FD"
            android:layout_marginEnd="@dimen/margin_small">
            <ImageView
                android:layout_width="@dimen/icon_size_sm"
                android:layout_height="@dimen/icon_size_sm"
                android:layout_gravity="center"
                android:src="@drawable/ic_accounts"
                app:tint="#152FD9" />
        </androidx.cardview.widget.CardView>

        <!-- معلومات الحساب -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- اسم الحساب -->
            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_headline2"
                android:textStyle="bold"
                android:textColor="#152FD9"
                android:maxLines="1"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_headline2"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- رقم الهاتف -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_xs">

                <ImageView
                    android:layout_width="@dimen/icon_size_sm"
                    android:layout_height="@dimen/icon_size_sm"
                    android:src="@drawable/ic_phone"
                    app:tint="#666" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:textSize="@dimen/text_size_caption"
                    android:textColor="#666"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_xs"
                    android:autoSizeMaxTextSize="@dimen/text_size_caption"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />
            </LinearLayout>

            <!-- رقم الحساب -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_xxs">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_accounts"
                    app:tint="#666" />

                <TextView
                    android:id="@+id/account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:textSize="@dimen/text_size_xs"
                    android:textColor="#999"
                    android:textStyle="italic"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_xs"
                    android:autoSizeMaxTextSize="@dimen/text_size_caption"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />
            </LinearLayout>

            <!-- الرصيد -->
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xs"
                android:textSize="@dimen/text_size_body1"
                android:textStyle="bold"
                android:textColor="#22C55E"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_body1"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
        </LinearLayout>

        <!-- أزرار الإجراءات -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@drawable/bg_buttons_container"
            android:padding="@dimen/padding_xs">

            <!-- زر واتساب (Toggle Switch) -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/whatsapp_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xs"
                android:text="واتساب"
                android:textSize="@dimen/text_size_xs"
                android:textColor="#666"
                app:thumbTint="#25D366"
                app:trackTint="#E0E0E0"
                app:thumbTintMode="src_atop"
                app:trackTintMode="src_atop"
                android:checked="true"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_caption"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- زر التعديل -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_small"
                android:text="تعديل"
                android:textSize="@dimen/text_size_caption"
                android:textColor="#FFFFFF"
                android:icon="@drawable/ic_edit"
                app:iconSize="@dimen/icon_size_sm"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/padding_xxs"
                android:backgroundTint="#152FD9"
                app:cornerRadius="@dimen/corner_radius_large"
                android:contentDescription="تعديل الحساب"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_xs"
                android:autoSizeMaxTextSize="@dimen/text_size_caption"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 