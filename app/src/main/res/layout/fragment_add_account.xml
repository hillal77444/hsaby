<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_background">

            <!-- رأس منحني علوي -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xl"
                android:background="@color/primary"
                android:scaleX="2.2"
                android:scaleY="1.2"
                android:layout_marginTop="@dimen/spacing_none" />

            <!-- أيقونة دائرية -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/icon_size_xl"
                android:layout_height="@dimen/icon_size_xl"
                app:cardCornerRadius="@dimen/card_corner_radius_xl"
                app:cardElevation="@dimen/card_elevation_xl"
                app:cardBackgroundColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/minus_100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerInside"
                    android:tint="@color/primary_variant" />
            </androidx.cardview.widget.CardView>

            <!-- العنوان -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إضافة حساب جديد"
                android:textSize="@dimen/text_size_headline1"
                android:textStyle="bold"
                android:textColor="@color/primary_variant"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- الوصف -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يرجى تعبئة بيانات الحساب بدقة"
                android:textSize="@dimen/text_size_body2"
                android:textColor="@color/textSecondary"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xs"
                android:layout_marginBottom="@dimen/margin_large"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_body2"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- البطاقة -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_xl"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- الاسم -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:hint="@string/name"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/primary_variant"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusTopEnd="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusBottomStart="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusBottomEnd="@dimen/card_corner_radius_lg"
                        app:hintTextColor="@color/hint_gray"
                        app:boxStrokeColor="@color/primary_variant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:textColor="@color/on_background"
                            android:textColorHint="@color/hint_gray"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body2"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- الهاتف -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/phone_number"
                            app:startIconDrawable="@drawable/ic_phone"
                            app:startIconTint="@color/primary_variant"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="@dimen/card_corner_radius_lg"
                            app:boxCornerRadiusTopEnd="@dimen/card_corner_radius_lg"
                            app:boxCornerRadiusBottomStart="@dimen/card_corner_radius_lg"
                            app:boxCornerRadiusBottomEnd="@dimen/card_corner_radius_lg"
                            app:hintTextColor="@color/hint_gray"
                            app:boxStrokeColor="@color/primary_variant">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:textColor="@color/on_background"
                                android:textColorHint="@color/hint_gray"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_body2"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/contacts_button"
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_marginStart="@dimen/margin_small"
                            android:padding="@dimen/padding_small"
                            app:icon="@drawable/ic_contacts"
                            app:iconTint="@color/primary_variant"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/padding_none"
                            app:cornerRadius="@dimen/card_corner_radius_lg"
                            android:backgroundTint="@color/background_light"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body2"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </LinearLayout>

                    <!-- الرصيد الافتتاحي (مخفي) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:hint="@string/opening_balance"
                        android:visibility="gone"
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="@color/primary_variant"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusTopEnd="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusBottomStart="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusBottomEnd="@dimen/card_corner_radius_lg"
                        app:hintTextColor="@color/hint_gray"
                        app:boxStrokeColor="@color/primary_variant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/openingBalanceEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="@color/on_background"
                            android:textColorHint="@color/hint_gray"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- الملاحظات (مخفاة فقط) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:hint="@string/notes"
                        app:startIconDrawable="@drawable/ic_note"
                        app:startIconTint="@color/primary_variant"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusTopEnd="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusBottomStart="@dimen/card_corner_radius_lg"
                        app:boxCornerRadiusBottomEnd="@dimen/card_corner_radius_lg"
                        app:hintTextColor="@color/hint_gray"
                        app:boxStrokeColor="@color/primary_variant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/notes_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:textColor="@color/on_background"
                            android:textColorHint="@color/hint_gray"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- خيار واتساب -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_small">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/whatsapp_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/whatsapp_enabled"
                            android:textColor="@color/primary"
                            android:checked="true"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:minHeight="@dimen/height_small"
                            android:paddingStart="@dimen/padding_none"
                            android:paddingEnd="@dimen/padding_none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_min"
                            android:autoSizeMaxTextSize="@dimen/text_size_max"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_xl"
                            android:layout_marginTop="@dimen/margin_xs"
                            android:text="سيتم إرسال إشعارات واتساب للعميل عند إضافة معاملات جديدة"
                            android:textSize="@dimen/text_size_caption"
                            android:textColor="@color/hint_gray"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_min"
                            android:autoSizeMaxTextSize="@dimen/text_size_max"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />
                    </LinearLayout>

                    <!-- زر الحفظ -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="حفظ"
                        android:backgroundTint="@color/primary_variant"
                        android:textColor="@color/on_primary"
                        android:textStyle="bold"
                        app:iconPadding="@dimen/padding_small"
                        app:cornerRadius="@dimen/card_corner_radius_lg"
                        android:layout_marginTop="@dimen/margin_large"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
