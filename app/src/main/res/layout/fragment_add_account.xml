<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F6F8FA">

            <!-- رأس الصفحة -->
            <View
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/info"
                android:scaleX="2.2"
                android:scaleY="1.2" />

            <androidx.cardview.widget.CardView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardCornerRadius="36dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="-100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerInside"
                    android:tint="#1976D2" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إضافة حساب جديد"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeStepGranularity="2sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="يرجى تعبئة بيانات الحساب بدقة"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeStepGranularity="2sp" />

            <!-- البطاقة -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- الاسم -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/name"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/primary"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2"
                        style="@style/CustomTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:textColor="#000000"
                            android:textColorHint="#666666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeStepGranularity="2sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- الهاتف -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/phone_number"
                            app:startIconDrawable="@drawable/ic_phone"
                            app:startIconTint="@color/primary"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:hintTextColor="#666666"
                            app:boxStrokeColor="#1976D2"
                            style="@style/CustomTextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:textColor="#000000"
                                android:textColorHint="#666666"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeMaxTextSize="24sp"
                                android:autoSizeStepGranularity="2sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/contacts_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="12dp"
                            app:icon="@drawable/ic_contacts"
                            app:iconTint="@color/primary"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="24dp"
                            android:backgroundTint="#E3F2FD"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeStepGranularity="2sp" />

                    </LinearLayout>

                    <!-- الرصيد الافتتاحي -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/opening_balance"
                        android:visibility="gone"
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="@color/primary"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2"
                        style="@style/CustomTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/openingBalanceEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="#000000"
                            android:textColorHint="#666666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeStepGranularity="2sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- الملاحظات (مخفاة فقط) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/notes"
                        app:startIconDrawable="@drawable/ic_note"
                        app:startIconTint="@color/primary"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintTextColor="#666666"
                        app:boxStrokeColor="#1976D2"
                        style="@style/CustomTextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/notes_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:textColor="#000000"
                            android:textColorHint="#666666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeStepGranularity="2sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- خيار واتساب -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/whatsapp_switch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/whatsapp_enabled"
                            android:textColor="@color/primary"
                            android:checked="true"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:minHeight="48dp"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeStepGranularity="2sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="4dp"
                            android:text="سيتم إرسال إشعارات واتساب للعميل عند إضافة معاملات جديدة"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:autoSizeStepGranularity="2sp" />
                    </LinearLayout>

                    <!-- أزرار -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/primary"
                        android:textColor="@android:color/white"
                        android:text="@string/save"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="24sp"
                        android:autoSizeStepGranularity="2sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/cancel"
                        android:backgroundTint="#F3F4F6"
                        android:textColor="#222"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="24sp"
                        android:autoSizeStepGranularity="2sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
