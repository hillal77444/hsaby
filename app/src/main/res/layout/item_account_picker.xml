<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_xs"
    android:layout_marginEnd="@dimen/margin_small"
    android:background="#FFFFFF"
    android:elevation="@dimen/elevation_small"
    android:radius="@dimen/corner_radius_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <!-- دائرة أيقونة الحساب -->
        <TextView
            android:id="@+id/accountIconTextView"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:gravity="center"
            android:text="م"
            android:textSize="@dimen/text_size_body1"
            android:textColor="#fff"
            android:background="@drawable/bg_account_icon_circle"
            android:elevation="@dimen/elevation_small"
            android:layout_marginEnd="@dimen/margin_small"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/accountNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسم الحساب"
                android:textSize="@dimen/text_size_body1"
                android:textColor="#222"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/margin_xs"/>

            <!-- ملاحظات الحساب في الطرف الآخر -->
            <TextView
                android:id="@+id/accountNotesTextView"
                android:layout_width="match_parent"
                android:maxWidth="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|end"
                android:text=""
                android:textSize="@dimen/text_size_small"
                android:textColor="#D32F2F"
                android:background="@android:color/transparent"
                android:elevation="@dimen/elevation_small"
                android:layout_marginStart="@dimen/margin_small"
                android:visibility="gone"
                android:maxLines="3"
                android:ellipsize="end"/>

            <LinearLayout
                android:id="@+id/balancesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_xs"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 