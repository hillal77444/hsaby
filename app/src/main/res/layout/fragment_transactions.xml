<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8F8">

            <!-- الدائرة العلوية والشعار والعنوان -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_xl"
                android:background="@color/info"
                android:scaleX="2.2"
                android:scaleY="1.2" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_large"
                android:layout_height="@dimen/height_large"
                app:cardCornerRadius="@dimen/corner_radius_xl"
                app:cardElevation="@dimen/elevation_large"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/minus_120dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_transactions"
                    android:scaleType="centerInside"
                    android:tint="#152FD9" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عرض وإدارة جميع المعاملات المالية"
                android:textSize="@dimen/text_size_body2"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xs"
                android:layout_marginBottom="@dimen/margin_large" />

            <!-- قسم التصفية والفلترة -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- تصفية حسب الحساب -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:textColorHint="#666666"
                        android:hint="اختر الحساب"
                        app:startIconDrawable="@drawable/ic_accounts"
                        app:startIconTint="#152FD9"
                        app:boxStrokeColor="#152FD9"
                        app:hintTextColor="#152FD9"
                        app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
                        app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
                        app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
                        app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium">

                        <AutoCompleteTextView
                            android:id="@+id/accountFilterDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:completionThreshold="1"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_body2"
                            android:textColor="#152FD9" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- تصفية التاريخ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الفترة الزمنية:"
                        android:textSize="@dimen/text_size_body2"
                        android:textColor="#666"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/startDateLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:hint="@string/from_date"
                            android:textColorHint="#666666"
                            app:startIconDrawable="@drawable/ic_calendar"
                            app:startIconTint="#152FD9"
                            app:boxStrokeColor="#152FD9"
                            app:hintTextColor="#152FD9"
                            app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
                            app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
                            app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
                            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/startDateFilter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:textColor="#152FD9" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/endDateLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_small"
                            android:hint="@string/to_date"
                            android:textColorHint="#666666"
                            app:startIconDrawable="@drawable/ic_calendar"
                            app:startIconTint="#152FD9"
                            app:boxStrokeColor="#152FD9"
                            app:hintTextColor="#152FD9"
                            app:boxCornerRadiusTopStart="@dimen/corner_radius_medium"
                            app:boxCornerRadiusTopEnd="@dimen/corner_radius_medium"
                            app:boxCornerRadiusBottomStart="@dimen/corner_radius_medium"
                            app:boxCornerRadiusBottomEnd="@dimen/corner_radius_medium">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/endDateFilter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:clickable="true"
                                android:textColor="#152FD9" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- إحصائيات سريعة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_large">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_large"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/corner_radius_medium"
                    app:cardElevation="@dimen/elevation_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_xs"
                    app:cardBackgroundColor="#E3F9F1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/totalTransactionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#152FD9"
                            android:textSize="@dimen/text_size_body1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إجمالي القيود"
                            android:textColor="#666"
                            android:textSize="@dimen/text_size_caption" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_large"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/corner_radius_medium"
                    app:cardElevation="@dimen/elevation_small"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardBackgroundColor="#E3E8FD">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/totalAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#152FD9"
                            android:textSize="@dimen/text_size_body1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إجمالي المبالغ"
                            android:textColor="#666"
                            android:textSize="@dimen/text_size_caption" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- قائمة القيود -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/padding_small"
                android:nestedScrollingEnabled="false" />

            <!-- مساحة للزر العائم -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_xxl" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- زر إضافة قيد جديد -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_xxxl"
        android:contentDescription="@string/add_transaction"
        app:srcCompat="@drawable/ic_add"
        app:backgroundTint="#152FD9"
        app:tint="#FFFFFF" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

    <!-- رسالة فارغة -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_medium"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="@dimen/margin_xl">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/padding_large">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_transactions"
                android:tint="#CCCCCC"
                android:layout_marginBottom="@dimen/margin_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_transactions"
                android:textSize="@dimen/text_size_body2"
                android:textColor="#666"
                android:textAlignment="center" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout> 