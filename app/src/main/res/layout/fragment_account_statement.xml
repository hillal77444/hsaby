<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="@dimen/spacing_standard">

        <!-- رأس منحني علوي -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xl"
            android:background="@color/primary"
            android:scaleX="2.2"
            android:scaleY="1.2"
            android:layout_marginTop="@dimen/spacing_none" />

        <!-- أيقونة دائرية -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            app:cardCornerRadius="@dimen/card_corner_radius_xl"
            app:cardElevation="@dimen/card_elevation_xl"
            app:cardBackgroundColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/minus_100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_statement"
                android:scaleType="centerInside"
                android:tint="@color/primary_variant" />
        </androidx.cardview.widget.CardView>

        <!-- العنوان -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="كشف الحساب"
            android:textSize="@dimen/text_size_headline1"
            android:textStyle="bold"
            android:textColor="@color/primary_variant"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <!-- Date Range Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="@dimen/elevation_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_date_range"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_caption"
                    android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:hint="@string/from_date"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fromDateInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/margin_xs"
                        android:hint="@string/to_date"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/toDateInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generateStatementButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="@string/generate_statement"
                    app:icon="@drawable/ic_reports"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_caption"
                    android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Account Summary -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="@dimen/elevation_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:id="@+id/accountNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_caption"
                    android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />

                <TextView
                    android:id="@+id/accountBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_caption"
                    android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Transactions List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Export PDF Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportPdfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/export_to_pdf"
            app:icon="@drawable/ic_pdf"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <TextView
            android:id="@+id/totalDebitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_body2"
            android:layout_marginBottom="@dimen/margin_small"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <TextView
            android:id="@+id/totalCreditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_body2"
            android:layout_marginBottom="@dimen/margin_large"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 