<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_standard">

        <!-- خلفية منحنية علوية -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xl"
            android:background="@color/info"
            android:scaleX="2.2"
            android:scaleY="1.2" />

        <!-- الشعار الدائري -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/negative_margin_logo">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_statement"
                android:scaleType="centerInside"
                android:tint="#152FD9" />
        </androidx.cardview.widget.CardView>

        <!-- العنوان -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large">
            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_statement"
                android:tint="#152FD9"
                android:layout_marginEnd="@dimen/margin_small" />
            <TextView
                android:id="@+id/reportsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التقارير المالية"
                android:textSize="@dimen/text_size_headline1"
                android:textStyle="bold"
                android:textColor="#152FD9"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
        </LinearLayout>

        <!-- الوصف -->
        <TextView
            android:id="@+id/reportsSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ملخص الحسابات والمعاملات المالية"
            android:textSize="@dimen/text_size_body2"
            android:textColor="#666"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_xs"
            android:layout_marginBottom="@dimen/margin_small"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_18"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <!-- بطاقة الأزرار -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/buttonsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/padding_small">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAccountsSummaryReport"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_min_height"
                        android:layout_weight="1"
                        android:text="تقرير ارصدة الحسابات"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="#152FD9"
                        app:icon="@drawable/ic_summary"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/padding_small"
                        android:textSize="@dimen/text_size_body1"
                        android:layout_marginEnd="@dimen/padding_small"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_body1"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAccountStatementButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_min_height"
                        android:layout_weight="1"
                        android:text="كشف الحساب"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="#152FD9"
                        app:icon="@drawable/ic_statement"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/padding_small"
                        android:textSize="@dimen/text_size_body1"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_body1"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCashboxStatement"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_min_height"
                        android:layout_weight="1"
                        android:text="تقرير ارصدة الصناديق "
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="#152FD9"
                        app:icon="@drawable/ic_wallet"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/padding_small"
                        android:textSize="@dimen/text_size_body1"
                        android:layout_marginEnd="@dimen/padding_small"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_body1"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة اجمالي الارصدة -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/summaryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_xs">
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_wallet"
                        android:tint="#152FD9"
                        android:layout_marginEnd="@dimen/margin_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اجمالي الارصده لجميع العملات "
                        android:textSize="@dimen/text_size_headline2"
                        android:textStyle="bold"
                        android:textColor="#152FD9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_headline2"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مدينون"
                            android:textSize="@dimen/text_size_body2"
                            android:textColor="#F44336"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body2"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <TextView
                            android:id="@+id/total_debtors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xs"
                            android:textSize="@dimen/text_size_body1"
                            android:textStyle="bold"
                            android:textColor="#F44336"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دائنون"
                            android:textSize="@dimen/text_size_body2"
                            android:textColor="#4CAF50"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body2"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <TextView
                            android:id="@+id/total_creditors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xs"
                            android:textSize="@dimen/text_size_body1"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_xs"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:background="#E3E8FD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="صافي الرصيد"
                    android:textSize="@dimen/text_size_body2"
                    android:textColor="#152FD9"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_caption"
                    android:autoSizeMaxTextSize="@dimen/text_size_body2"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />

                <TextView
                    android:id="@+id/net_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xs"
                    android:textSize="@dimen/text_size_headline2"
                    android:textStyle="bold"
                    android:textColor="#152FD9"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/text_size_caption"
                    android:autoSizeMaxTextSize="@dimen/text_size_headline2"
                    android:autoSizeStepGranularity="@dimen/text_size_step" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- بطاقة ملخص المعاملات -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/transactionsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_xs">
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_summary"
                        android:tint="#152FD9"
                        android:layout_marginEnd="@dimen/margin_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملخص المعاملات"
                        android:textSize="@dimen/text_size_headline2"
                        android:textStyle="bold"
                        android:textColor="#152FD9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_headline2"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="عدد العمليات"
                            android:textSize="@dimen/text_size_body2"
                            android:textColor="#666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body2"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <TextView
                            android:id="@+id/total_transactions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xs"
                            android:textSize="@dimen/text_size_body1"
                            android:textStyle="bold"
                            android:textColor="#152FD9"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="متوسط العملية"
                            android:textSize="@dimen/text_size_body2"
                            android:textColor="#666"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body2"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <TextView
                            android:id="@+id/average_transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_xs"
                            android:textSize="@dimen/text_size_body1"
                            android:textStyle="bold"
                            android:textColor="#152FD9"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_caption"
                            android:autoSizeMaxTextSize="@dimen/text_size_body1"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 