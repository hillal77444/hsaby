<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F8F8">

            <!-- رأس الصفحة -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_xl"
                android:background="@color/info"
                android:scaleX="2.2"
                android:scaleY="1.2" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                app:cardCornerRadius="@dimen/button_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/minus_100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_statement"
                    android:scaleType="centerInside"
                    android:tint="#152FD9" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التقارير المالية"
                android:textSize="@dimen/text_size_headline1"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_sm"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_10"
                android:autoSizeMaxTextSize="@dimen/text_size_22"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ملخص الحسابات والمعاملات المالية"
                android:textSize="@dimen/text_size_body2"
                android:textColor="#666"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xs"
                android:layout_marginBottom="@dimen/margin_small"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_caption"
                android:autoSizeMaxTextSize="@dimen/text_size_18"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <!-- بطاقة الأزرار العصرية -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_standard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/padding_small">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAccountsSummaryReport"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_small"
                            android:layout_weight="1"
                            android:text="تقرير ارصدة الحسابات"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/teal_700"
                            android:icon="@drawable/ic_summary"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/padding_small"
                            android:textSize="@dimen/text_size_headline2"
                            android:layout_marginEnd="@dimen/padding_small"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_10"
                            android:autoSizeMaxTextSize="@dimen/text_size_18"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/viewAccountStatementButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_small"
                            android:layout_weight="1"
                            android:text="كشف الحساب"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:backgroundTint="#3F51B5"
                            android:icon="@drawable/ic_statement"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/padding_small"
                            android:textSize="@dimen/text_size_headline2"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_10"
                            android:autoSizeMaxTextSize="@dimen/text_size_18"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCashboxStatement"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height_small"
                            android:layout_weight="1"
                            android:text="تقرير ارصدة الصناديق "
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:backgroundTint="#1976d2"
                            android:icon="@drawable/ic_wallet"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/padding_small"
                            android:textSize="@dimen/text_size_headline2"
                            android:layout_marginEnd="@dimen/padding_small"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_size_10"
                            android:autoSizeMaxTextSize="@dimen/text_size_18"
                            android:autoSizeStepGranularity="@dimen/text_size_step" />

                        <!-- إذا كان هناك زر رابع أضفه هنا بنفس النمط -->
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
             <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_small"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_standard">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اجمالي الارصده لجميع العملات "
                        android:textSize="@dimen/text_size_headline2"
                        android:textStyle="bold"
                        android:textColor="#152FD9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="مدينون"
                                android:textSize="@dimen/text_size_body2"
                                android:textColor="#F44336"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_18"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                            <TextView
                                android:id="@+id/total_debtors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold"
                                android:textColor="#F44336"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_20"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="دائنون"
                                android:textSize="@dimen/text_size_body2"
                                android:textColor="#4CAF50"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_18"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                            <TextView
                                android:id="@+id/total_creditors"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_20"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_1"
                        android:layout_marginVertical="@dimen/margin_small"
                        android:background="#E3E8FD" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="صافي الرصيد"
                        android:textSize="@dimen/text_size_body2"
                        android:textColor="#152FD9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_18"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />

                    <TextView
                        android:id="@+id/net_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xs"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold"
                        android:textColor="#152FD9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_22"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- كرت ملخص الحسابات -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_medium"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_standard">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملخص المعاملات"
                        android:textSize="@dimen/text_size_headline2"
                        android:textStyle="bold"
                        android:textColor="#152FD9"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="@dimen/text_size_caption"
                        android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                        android:autoSizeStepGranularity="@dimen/text_size_step" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="عدد العمليات"
                                android:textSize="@dimen/text_size_body2"
                                android:textColor="#666"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                            <TextView
                                android:id="@+id/total_transactions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:textSize="@dimen/text_size_20"
                                android:textStyle="bold"
                                android:textColor="#152FD9"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="متوسط العملية"
                                android:textSize="@dimen/text_size_body2"
                                android:textColor="#666"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                            <TextView
                                android:id="@+id/average_transaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_xs"
                                android:textSize="@dimen/text_size_20"
                                android:textStyle="bold"
                                android:textColor="#152FD9"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="@dimen/text_size_caption"
                                android:autoSizeMaxTextSize="@dimen/text_size_headline1"
                                android:autoSizeStepGranularity="@dimen/text_size_step" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout> 