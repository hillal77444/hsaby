<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <!-- أزرار تصفية العملة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#fff"
        android:padding="8dp">

        <Button
            android:id="@+id/btnFilterYER"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="يمني"
            android:backgroundTint="@color/teal_700"
            android:textColor="#fff"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp" />
        <Button
            android:id="@+id/btnFilterSAR"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="سعودي"
            android:backgroundTint="#E3E8FD"
            android:textColor="#152FD9"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp" />
        <Button
            android:id="@+id/btnFilterUSD"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="دولار"
            android:backgroundTint="#E3E8FD"
            android:textColor="#152FD9"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp" />
    </LinearLayout>

    <!-- ترويسة الأعمدة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#E3E8FD"
        android:paddingVertical="4dp"
        android:paddingHorizontal="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="الحساب"
            android:gravity="center|right"
            android:textStyle="bold"
            android:textColor="#152FD9"
            android:textSize="16sp"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="2sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="عليه"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="2sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="له"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="2sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="الرصيد"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#152FD9"
            android:textSize="16sp"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="2sp" />
    </LinearLayout>

    <!-- الجدول -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accountsSummaryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:paddingBottom="72dp"
        android:clipToPadding="false"
        android:background="#fff" />

    <!-- شريط الإجماليات -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginBottom="72dp">
        <TextView
            android:id="@+id/tvTotalBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="الرصيد: 0"
            android:textColor="#152FD9"
            android:textStyle="bold"
            android:textSize="16sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp" />
        <TextView
            android:id="@+id/tvTotalCredit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="له: 0"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="16sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp" />
        <TextView
            android:id="@+id/tvTotalDebit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="عليه: 0"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="16sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="22sp"
            android:autoSizeStepGranularity="2sp" />
    </LinearLayout>

</LinearLayout> 