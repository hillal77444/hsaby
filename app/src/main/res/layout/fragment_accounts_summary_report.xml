<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <!-- أزرار تصفية العملة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#fff"
        android:padding="@dimen/padding_small">

        <Button
            android:id="@+id/btnFilterYER"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_medium"
            android:layout_weight="1"
            android:text="يمني"
            android:backgroundTint="@color/teal_700"
            android:textColor="#fff"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <Button
            android:id="@+id/btnFilterSAR"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_medium"
            android:layout_weight="1"
            android:text="سعودي"
            android:backgroundTint="#E3E8FD"
            android:textColor="#152FD9"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <Button
            android:id="@+id/btnFilterUSD"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_medium"
            android:layout_weight="1"
            android:text="دولار"
            android:backgroundTint="#E3E8FD"
            android:textColor="#152FD9"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
    </LinearLayout>

    <!-- ترويسة الأعمدة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large"
        android:orientation="horizontal"
        android:background="#E3E8FD"
        android:paddingVertical="@dimen/padding_xs"
        android:paddingHorizontal="@dimen/padding_xxs">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="الحساب"
            android:gravity="center|right"
            android:textStyle="bold"
            android:textColor="#152FD9"
            android:textSize="@dimen/text_size_body1"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="عليه"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:textSize="@dimen/text_size_body1"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="له"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="@dimen/text_size_body1"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="الرصيد"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#152FD9"
            android:textSize="@dimen/text_size_body1"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
    </LinearLayout>

    <!-- الجدول -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accountsSummaryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_xxl"
        android:clipToPadding="false"
        android:background="#fff" />

    <!-- شريط الإجماليات -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="@dimen/padding_small"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_xxl">
        <TextView
            android:id="@+id/tvTotalBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="الرصيد: 0"
            android:textColor="#152FD9"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_body1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <TextView
            android:id="@+id/tvTotalCredit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="له: 0"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_body1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        <TextView
            android:id="@+id/tvTotalDebit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="عليه: 0"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_body1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
    </LinearLayout>

</LinearLayout> 