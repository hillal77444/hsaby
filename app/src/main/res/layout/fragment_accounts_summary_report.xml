<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="@dimen/spacing_standard">

        <!-- رأس منحني علوي -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xl"
            android:background="@color/primary"
            android:scaleX="2.2"
            android:scaleY="1.2"
            android:layout_marginTop="@dimen/spacing_none" />

        <!-- أيقونة دائرية -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            app:cardCornerRadius="@dimen/card_corner_radius_xl"
            app:cardElevation="@dimen/card_elevation_xl"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/minus_100dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_summary"
                android:scaleType="centerInside"
                android:tint="@color/primary_variant" />
        </androidx.cardview.widget.CardView>

        <!-- العنوان -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تقرير ملخص الحسابات"
            android:textSize="@dimen/text_size_headline1"
            android:textStyle="bold"
            android:textColor="@color/primary_variant"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <!-- أزرار تصفية العملة -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/padding_small">

            <Button
                android:id="@+id/btnFilterYER"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:text="يمني"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <Button
                android:id="@+id/btnFilterSAR"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:text="سعودي"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary_variant"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <Button
                android:id="@+id/btnFilterUSD"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_medium"
                android:layout_weight="1"
                android:text="دولار"
                android:backgroundTint="@color/cardBackground"
                android:textColor="@color/primary_variant"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
        </LinearLayout>

        <!-- ترويسة الأعمدة -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_large"
            android:orientation="horizontal"
            android:background="@color/info"
            android:paddingVertical="@dimen/padding_xs"
            android:paddingHorizontal="@dimen/padding_xxs">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="الحساب"
                android:gravity="center|right"
                android:textStyle="bold"
                android:textColor="@color/primary_variant"
                android:textSize="@dimen/text_size_body1"
                android:background="@drawable/table_border"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="عليه"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/debit_red"
                android:textSize="@dimen/text_size_body1"
                android:background="@drawable/table_border"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="له"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/credit_green"
                android:textSize="@dimen/text_size_body1"
                android:background="@drawable/table_border"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="الرصيد"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/primary_variant"
                android:textSize="@dimen/text_size_body1"
                android:background="@drawable/table_border"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
        </LinearLayout>

        <!-- الجدول -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accountsSummaryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_xxl"
            android:clipToPadding="false"
            android:background="@color/white" />

        <!-- شريط الإجماليات -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/padding_small"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_xxl">
            <TextView
                android:id="@+id/tvTotalBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الرصيد: 0"
                android:textColor="@color/primary_variant"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <TextView
                android:id="@+id/tvTotalCredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="له: 0"
                android:textColor="@color/credit_green"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
            <TextView
                android:id="@+id/tvTotalDebit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="عليه: 0"
                android:textColor="@color/debit_red"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_body1"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 