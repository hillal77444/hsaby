<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius_medium"
    app:cardElevation="@dimen/elevation_medium"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_large"
        android:orientation="horizontal"
        android:background="#fff">

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|right"
            android:textColor="#222"
            android:textSize="@dimen/text_size_small"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <TextView
            android:id="@+id/debitsTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textColor="#F44336"
            android:textSize="@dimen/text_size_small"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <TextView
            android:id="@+id/creditsTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textColor="#4CAF50"
            android:textSize="@dimen/text_size_small"
            android:background="@drawable/table_border"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_min"
            android:autoSizeMaxTextSize="@dimen/text_size_max"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/table_border">

            <TextView
                android:id="@+id/balanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#152FD9"
                android:textSize="@dimen/text_size_small"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="@dimen/text_size_min"
                android:autoSizeMaxTextSize="@dimen/text_size_max"
                android:autoSizeStepGranularity="@dimen/text_size_step" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_xs"
                android:src="@drawable/ic_arrow_upward"
                android:contentDescription="سهم الرصيد" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 