<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin_xxl">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- البطاقة العلوية المصغرة -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardElevation="@dimen/elevation_medium"
        android:layout_margin="@dimen/margin_small"
        app:cardBackgroundColor="#FFFFFF"
        android:minHeight="@dimen/height_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- اختيار الحساب وزر الطباعة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <AutoCompleteTextView
                    android:id="@+id/accountDropdown"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_small"
                    android:layout_weight="1"
                    android:hint="اختر الحساب"
                    android:background="@drawable/bg_edittext"
                    android:padding="@dimen/padding_none"
                    android:textSize="@dimen/text_size_body2"
                    android:inputType="none"
                    android:focusable="false"
                    android:gravity="center"
                    android:textAlignment="center"
                    style="@style/CustomTextInputEditText"
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="اختبار الحساب"/>

                <ImageButton
                    android:id="@+id/btnPrintInCard"
                    android:layout_width="@dimen/height_medium"
                    android:layout_height="@dimen/height_medium"
                    android:background="@drawable/bg_print_button"
                    android:src="@drawable/ic_print"
                    android:tint="#1976d2"
                    android:contentDescription="طباعة"
                    android:layout_marginStart="@dimen/margin_small"/>
            </LinearLayout>

            <!-- التواريخ بشكل أفقي ومضغوط -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:layout_marginTop="@dimen/margin_xxs">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:text="من"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_body1"
                    android:textColor="#666666"
                    android:paddingHorizontal="@dimen/padding_small"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startDateInput"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_calendar"
                    android:textSize="@dimen/text_size_body2"
                    style="@style/CustomTextInputEditText"
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="@dimen/padding_none"
                    android:text="2024-06-01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:text="الى"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_body1"
                    android:textColor="#666666"
                    android:paddingHorizontal="@dimen/padding_small"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endDateInput"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_calendar"
                    android:textSize="@dimen/text_size_body2"
                    style="@style/CustomTextInputEditText"
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:padding="@dimen/padding_none"
                    android:text="2024-06-30"/>
            </LinearLayout>

            <!-- أزرار العملات -->
            <LinearLayout
                android:id="@+id/currencyButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_xs"
                android:visibility="gone"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- مكان التقرير -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:layout_margin="@dimen/margin_small"/>
</LinearLayout>
