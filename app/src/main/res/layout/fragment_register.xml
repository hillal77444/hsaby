<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F8F8">

        <!-- الدائرة العلوية -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xl"
            android:background="@color/info"
            android:scaleX="2.2"
            android:scaleY="1.2" />

        <!-- عنوان الصفحة -->
        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إنشاء حساب جديد"
            android:textSize="@dimen/text_size_headline1"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/negative_margin_title_login"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />
        >

        <!-- الشعار الدائري -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_medium"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small">
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>

        <!-- الحاوية البيضاء للحقول -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_medium"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_standard">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اسم المستخدم"
                    app:startIconDrawable="@drawable/ic_person"
                    app:hintTextColor="#3F51B5"
                    app:boxStrokeColor="#3F51B5">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDisplayName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="رقم الهاتف"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:hintTextColor="#3F51B5"
                    app:boxStrokeColor="#3F51B5"
                    android:layout_marginTop="@dimen/margin_small">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="كلمة السر"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="#3F51B5"
                    app:boxStrokeColor="#3F51B5"
                    android:layout_marginTop="@dimen/margin_small">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="تأكيد كلمة السر"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="#3F51B5"
                    app:boxStrokeColor="#3F51B5"
                    android:layout_marginTop="@dimen/margin_small">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- زر إنشاء حساب جديد -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إنشاء حساب جديد"
            android:backgroundTint="#152FD9"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:iconPadding="@dimen/padding_small"
            app:cornerRadius="@dimen/corner_radius_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/text_size_caption"
            android:autoSizeMaxTextSize="@dimen/text_size_headline1"
            android:autoSizeStepGranularity="@dimen/text_size_step" />

        <!-- زر العودة لتسجيل الدخول -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العودة لتسجيل الدخول"
            android:backgroundTint="#152FD9"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small" />

        <!-- العناصر المخفية (مثال: ProgressBar) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView> 